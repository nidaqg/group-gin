<section class="row justify-content-center text-center">
<section class="col-md-6 justify-content-center text-center align-items-center">

<form class="mb-4 mt-4">
  <h2 class="mt-3">SIGN UP</h2>
  <section class="mb-3">
    <label for="signupEmail" class="form-label">Email address</label>
    <input type="email" class="form-control" id="signupEmail" aria-describedby="useremail2">
  </section>

  <section class="mb-3">
    <label for="signupUsername" class="form-label">Username</label>
    <input type="text" class="form-control" id="signupUsername">
  </section>

  <section class="mb-3">
    <label for="signupPassword" class="form-label">Password</label>
    <input type="password" class="form-control" id="signupPassword">
  </section>

  <button id= "signup" class="btn btn-dark localBtn">Submit</button>

  <section class="justify-content-end m-3 text-end">
      <label for="loginInstead" class="form-label">Already a member?</label>
      <button id="loginInstead" class="btn btn-light localBtn">Login</button>
  </section>
  
</form>

</section>
</section>
<script src="/js/signup.js"></script>