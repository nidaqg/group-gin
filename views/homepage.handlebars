<section class="row">
  <section class="col-md-3 ms-4 mt-3 mb-3 text-center">
    <h5 class="text-center mt-2">Search the wiki</h5>
    <input class="form-control me-2 mb-3" type="search" id="userInput" placeholder="Search" aria-label="Search">
    <button class="btn btn-dark localBtn mb-3" id="searchButton" type="submit">Search</button>
    <section class="dropdown">
      <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Search by Category
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li><a class="dropdown-item" href="#">Spirits</a></li>
        <li><a class="dropdown-item" href="#">Beer</a></li>
        <li><a class="dropdown-item" href="#">Wine</a></li>
        <li><a class="dropdown-item" href="#">Non-Alcoholic Drinks</a></li>
      </ul>
    </section>
  </section>

  <section class="col-md-8 m-3">
    <h3 class="text-center mt-2">Choose your Cocktail</h3>

    {{#each cocktails as |cocktail|}}

    <section class="card mt-3 mb-3">
      <section class="card-header text-center">
        <h4>{{cocktail.cocktail_name}}</h4>
        <h5>Created by: {{cocktail.user.user_name}}</h5>
        {{#each cocktail_ingredients as |ingredient|}}
        <p>Ingredient: {{ingredient_name}}</p>
        {{/each}}
        {{#each cocktail_categorytypes as |categoryType|}}
        <p>Type Of Spirit: {{categoryType_name}}</p>
        {{#each categoryType_Brand as |brand|}}
        <p>Brand: {{brand_name}}</p>
        {{/each}}
        {{/each}}
        {{#each cocktail_ratings as |ratings|}}
        <p>Rating: {{rating}}</p>
        {{/each}}
      </section>
      <section class="card-body text-center">
        <p></p>
        <a href="/cocktail/{{cocktail.id}}" class="btn btn-dark localBtn">Get the Recipe</a>
      </section>
    </section>

    {{/each}}

  </section>

</section>
<script src="/js/homepage.js"></script>