<section class="row justify-content-center text-center">
  <section class="col-md-6 justify-content-center text-center align-items-center">

    <form class="mb-4 mt-4">

      <h2 class="mt-3">LOGIN</h2>
      <section class="mb-3">
        <label for="user-email" class="form-label">Email</label>
        <input type="email" class="form-control" id="user-email">
      </section>

      <section class="mb-3">
        <label for="user-password" class="form-label">Password</label>
        <input type="password" class="form-control" id="user-password">
      </section>

      <button id="login" class="btn btn-dark localBtn">Login</button>

      <section class="m-3 justify-content-end text-end">
        <label for="signupInstead" class="form-label">Not a member yet?</label>
        <button id="signupInstead" class="btn btn-light localBtn">Signup</button>
      </section>

    </form>

  </section>
</section>
